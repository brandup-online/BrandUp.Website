@page
@model ExampleWebSite.Pages.WebPageModel

<page title="Main page">
    <header class="page-header">
        <h1>@Model.Header</h1>
    </header>

    <section class="page-block">
        @{
            var webSiteContext = HttpContext.GetWebsiteContext();
            var websiteVersion = HttpContext.RequestServices.GetRequiredService<BrandUp.Website.Infrastructure.IWebsiteVersion>();
        }
        <p>WebSite Version: @websiteVersion.GetVersion()</p>
        <p>WebSite Id: @webSiteContext.Website.Id</p>
        <p>WebSite Name: @webSiteContext.Website.Name</p>
        <p>WebSite Title: @webSiteContext.Website.Title</p>
    </section>
</page>