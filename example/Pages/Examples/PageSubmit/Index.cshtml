@page
@model ExampleWebSite.Pages.Examples.PageSubmit.IndexModel

<page title="Page handlers">
    <header class="page-header">
        <h1>@Model.Header</h1>
    </header>

    <section class="page-block page-block-form">
        <form method="post" asp-page-handler="Save">
            <div class="rows">
                <div class="row fields">
                    <div class="field">
                        <div class="control textbox">
                            <input type="text" asp-for="Key" placeholder="Key" required />
                        </div>
                    </div>
                    <div class="field">
                        <div class="control textbox">
                            <input type="text" asp-for="Value" placeholder="Value" />
                            <button asp-page-handler="Generate" formnovalidate>Generate</button>
                        </div>
                    </div>
                </div>
            </div>
            <div asp-validation-summary="All"></div>
            @if (Model.IsSaved)
            {
                <div>Saved success: <b>@Model.Key</b></div>
            }
            <div class="actions">
                <button type="submit">Save</button>
                <button type="button" data-command="reload">Reload</button>
                <button type="button" data-command="test">Submit</button>
            </div>
        </form>
    </section>

    <section class="page-block page-block-form">
        <h2>Internal redirect from post submit</h2>
        <form method="post" asp-page-handler="InternalRedirect">
            <div asp-validation-summary="All"></div>
            <div class="actions">
                <button type="submit">Redirect</button>
            </div>
        </form>
    </section>

    <section class="page-block page-block-form">
        <h2>Internal redirect (reload) from post submit</h2>
        <form method="post" asp-page-handler="InternalRedirectReload">
            <div asp-validation-summary="All"></div>
            <div class="actions">
                <button type="submit">Redirect and realod</button>
            </div>
        </form>
    </section>

    <section class="page-block page-block-form">
        <h2>External redirect from post submit</h2>
        <form method="post" asp-page-handler="ExtenalRedirect">
            <div asp-validation-summary="All"></div>
            <div class="actions">
                <button type="submit">Redirect</button>
            </div>
        </form>
    </section>

    <section class="page-block page-block-form">
        <h2>Bad request</h2>
        <form method="post" asp-page-handler="Error">
            <div asp-validation-summary="All"></div>
            <div class="actions">
                <button type="submit">Submit</button>
            </div>
        </form>
    </section>

    <section class="page-block page-block-form">
        <h2>Long request submit</h2>
        <form method="post" asp-page-handler="Long">
            <div asp-validation-summary="All"></div>
            <div class="actions">
                <button type="submit">Submit</button>
            </div>
        </form>
    </section>
</page>